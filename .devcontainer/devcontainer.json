{
    "name": "Python",
    // Use a pre-built Python image
    "image": "mcr.microsoft.com/devcontainers/python:3.10",

    "postCreateCommand": "git config --global user.name 'Odin Anderson' && git config --global user.email 'Odina@Microsoft.com' && pip install ipykernel",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    }
}
